<h2> ログイン </h2>

<div class="form-template">
    <%= form_with scope: :session, local: true do |f| %>
        <div class="mb-3 row form-block">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control-plaintext", id: "session_email" %>
            </div>
        </div>
        <div class="mb-3 row form-block">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control-control-plaintext", id: "session_password" %>
            </div>
        </div>
        <div class="mb-3 row form-block">
            <div class="col-sm-10">
                <%= f.submit "ログインする", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
<ul class="list-template">
    <li><%= link_to "新規登録はこちら", signin_path %></li>
    <li><a>パスワードを忘れた方はこちら</a></li>
</ul>
